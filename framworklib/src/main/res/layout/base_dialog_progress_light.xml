<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/base_progress_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/base_progress_lr_padding"
    android:paddingRight="@dimen/base_progress_lr_padding" >

    <ImageView
        android:id="@+id/iv_dialog_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/base_ic_progress_light"
        android:contentDescription="" />

    <TextView
        android:id="@+id/tv_dialog_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/base_progress_iv_tv_magin"
        android:textSize="@dimen/base_progress_text_size"
        android:textColor="@color/base_progress_light_text_color" />

</LinearLayout>